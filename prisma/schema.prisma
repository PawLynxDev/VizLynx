generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  name      String?
  avatarUrl String?
  plan      String   @default("free")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects   Project[]
  brandKits  BrandKit[]
  promotions Promotion[]
}

model BrandKit {
  id              String   @id @default(cuid())
  name            String
  logoLightUrl    String?
  logoLightKey    String?
  logoDarkUrl     String?
  logoDarkKey     String?
  colorPrimary    String   @default("#6c63ff")
  colorSecondary  String   @default("#1a1a2e")
  colorAccent     String   @default("#ff6b6b")
  colorBackground String   @default("#ffffff")
  colorText       String   @default("#1a1a2e")
  fontHeading     String   @default("Inter")
  fontBody        String   @default("Inter")
  isDefault       Boolean  @default(false)
  userId          String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  projects   Project[]
  promotions Promotion[]

  @@index([userId])
}

model Project {
  id         String   @id @default(cuid())
  name       String
  status     String   @default("draft") // draft | processing | completed
  userId     String
  templateId String
  brandKitId String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user             User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  template         Template           @relation(fields: [templateId], references: [id])
  brandKit         BrandKit?          @relation(fields: [brandKitId], references: [id], onDelete: SetNull)
  sourceImages     SourceImage[]
  generatedContent GeneratedContent[]

  @@index([userId])
  @@index([brandKitId])
}

model SourceImage {
  id           String   @id @default(cuid())
  originalUrl  String
  processedUrl String?
  fileKey      String
  fileName     String
  fileSize     Int
  mimeType     String
  status       String   @default("uploaded") // uploaded | processing | processed | failed
  projectId    String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model GeneratedContent {
  id        String   @id @default(cuid())
  imageUrl  String
  fileKey   String
  width     Int      @default(1080)
  height    Int      @default(1080)
  projectId String
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model Template {
  id          String   @id @default(cuid())
  name        String
  description String
  thumbnail   String
  config      Json
  category    String   @default("general")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  projects Project[]
}

model Promotion {
  id     String @id @default(cuid())
  name   String @default("Untitled Promotion")
  status String @default("draft") // draft | analyzing | generated | composited | completed

  userId     String
  brandKitId String?

  // Source product image
  sourceImageUrl  String
  sourceImageKey  String
  sourceFileName  String
  sourceFileSize  Int
  sourceMimeType  String

  // AI analysis
  fluxPrompt        String? @db.Text
  marketingHeadline String?
  marketingSubline  String?
  marketingCta      String?
  productAnalysis   String? @db.Text

  // Flux generated image
  fluxImageUrl String?
  fluxImageKey String?
  fluxSeed     Int?

  // Final composited image
  finalImageUrl String?
  finalImageKey String?
  finalWidth    Int?
  finalHeight   Int?

  // Video
  videoUrl    String?
  videoKey    String?
  videoStatus String @default("idle") // idle | generating | completed | failed

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  brandKit BrandKit?         @relation(fields: [brandKitId], references: [id], onDelete: SetNull)
  exports  PromotionExport[]

  @@index([userId])
  @@index([brandKitId])
}

model PromotionExport {
  id        String @id @default(cuid())
  imageUrl  String
  fileKey   String
  width     Int
  height    Int
  sizeLabel String

  promotionId String
  createdAt   DateTime @default(now())

  promotion Promotion @relation(fields: [promotionId], references: [id], onDelete: Cascade)

  @@index([promotionId])
}
